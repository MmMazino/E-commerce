@model Ecommerce.Models.db.TblMember
    <header>
        <link rel="stylesheet" href="~/css/site.css" />
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a asp-controller="Home" asp-action="Index"><img src="~/pic/Logo.png" width="100px" height="100px" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Meat">Meat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Vegetable">Vegetable</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">Cart</a>
                        </li>
                    </ul>
                </div>
                <ul class="navbar-right m-1">
                    <form asp-controller="Home" asp-action="SearchProduct">
                        <input type="text" name="CheckSearch" />
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-search"></i>
                        </button>
                    </form>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <head>
            <link href="~/css/Login.css" rel="stylesheet" />
        </head>
        <body>
            <div class="row mtop justify-content-center">
                <div>
                    <h2 class="text-center">Login</h2>
                    <div class="m-3">
                        <form asp-action="Login" method="post">
                            <div class="form-group">
                                <label asp-for="Username" class="control-label"></label>
                                <input asp-for="Username" class="form-control" placeholder="Username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-center">
                                <div class="text-center">
                                    <button asp-controller="Home" asp-action="Register2" class="btn btn-primary">Register</button>
                                </div>
                                <div class="form-group text-center ml-2">
                                    <input type="submit" value="Login" class="btn btn-success" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div>
                    <img src="~/pic/bg1.jpg" class="img-fluid" style="max-width:600px;max-height:720px" />
                </div>
            </div>
        </body>
    </div>
